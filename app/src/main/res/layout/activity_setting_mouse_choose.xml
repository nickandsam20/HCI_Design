<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="212dp"
                android:layout_height="170dp"
                android:layout_marginStart="96dp"
                app:srcCompat="@drawable/setting_choose_mouse" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="選擇解鎖時可以\n隨機出現的嘴型"
                android:textAlignment="center"
                android:textColor="#EA5F25"
                android:textSize="24sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <ToggleButton
                    android:id="@+id/toggleButton0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/mouse0"
                    android:textOff=" "
                    android:textOn="V" />

                <ToggleButton
                    android:id="@+id/toggleButton1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/mouse1"
                    android:textOff=" "
                    android:textOn="V" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <ToggleButton
                    android:id="@+id/toggleButton2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/mouse2"
                    android:textOff=" "
                    android:textOn="V" />

                <ToggleButton
                    android:id="@+id/toggleButton3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/mouse3"
                    android:textOff=" "
                    android:textOn="V" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <ToggleButton
                    android:id="@+id/toggleButton4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/mouse4"
                    android:textOff=" "
                    android:textOn="V" />

                <ToggleButton
                    android:id="@+id/toggleButton5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/mouse5"
                    android:textOff=" "
                    android:textOn="V" />

            </TableRow>


        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:backgroundTint="#FF5722"
                android:text="finish" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/mouse_choose_returnbtn"
            android:layout_width="88dp"
            android:layout_height="123dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="180dp"
            android:background="#03FFFFFF"
            app:srcCompat="@drawable/return_btn" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>